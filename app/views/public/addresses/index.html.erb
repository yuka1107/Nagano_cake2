<div class="container">
  <h2 class="bg-light m-3">配送先登録/一覧</h2>
  <%= form_with model: Address.new, url: addresses_path, local:true do |f| %>
    <table class="table table-borderless table-responsive">
      <tbody>
        <tr>
          <td class="col-3"><%= f.label "郵便番号(ハイフンなし)" %></td>
          <td><%= f.text_field :postal_code, class: "form-control" %></td>
        </tr>
        <tr>
          <td class="col-3"><%= f.label "住所" %></td>
          <td colspan="2"><%= f.text_field :address, class: "form-control" %></td>
        </tr>
        <tr>
          <td class="col-3"><%= f.label "宛名" %></td>
          <td><%= f.text_field :name, class: "form-control" %></td>
        </tr>
      </tbody>
    </table>
    <div class="row justify-content-center my-3">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>
  <table class="table table-bordered">
    <thead class="thead-light">
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td>
            <%= address.postal_code %>
          </td>
          <td>
            <%= address.address %>
          </td>
          <td>
            <%= address.name %>
          </td>
          <td>
            <div class="row mx-auto">
              <div class="col">
                <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
              </div>
              <div class="col">
                <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger" %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>