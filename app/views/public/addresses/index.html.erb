<h4 class="mx-5">配送先登録/一覧</h4>

<div class="mx-4">
  
  <%= form_with model: @address, local:true do |f| %>
  <table>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, size: 70 %></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td><%= f.text_field :name %></td>
      <td><button type="submit" class="btn btn-success mx-5">新規登録</button></td>
    </tr>
  </table>
  <% end %>

  <table class="table-bordered my-4">
    
      <tr>
        <td>郵便番号</td>
        <td>住所</td>
        <td>宛名</td>
        <td></td>
      </tr>
   
    <% @addresses.each do |address| %>
    
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success"  %>
          <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    
    <% end %>
  </table>
  
</div>