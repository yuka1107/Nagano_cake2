<h2>配送先登録/一覧</h2>

<div>
  <%= form_with model: @address, local:true do |f| %>
  <table>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td><%= f.text_field :name %></td>
      <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
    </tr>
  </table>
  <% end %>

  <table class="table-bordered">
    <tr>
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td></td>
    </tr>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success"  %>
        <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-sm btn-danger" %>
      </td>
    </tr>
    <% end %>
  </table>
</div>