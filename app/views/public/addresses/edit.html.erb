<h4>配送先編集</h4>

<div>
  <%= form_with model: @address, local:true do |f| %>
  <table>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, size: 70 %></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td><%= f.text_field :name %></td>
      <td><button type="submit" class="btn btn-success mx-5">変更内容を保存</button></td>
    </tr>
  </table>
  <% end %>
</div>