<div class="container">
  <h2 class="m-5">注文履歴詳細</h2>
  <div class="row">
    <div class="col">
      <h5>注文情報</h5>
    </div>
    <div class="col">
      <h5>請求情報</h5>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="table-active">注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="table-active">配送先</th>
            <td>
              <%= "〒#{@order.postal_code}" %><br>
              <%= @order.address %><br>
              <%= "#{@order.customer.last_name}#{@order.customer.first_name}"  %>
            </td>
          </tr>
          <tr>
            <th class="table-active">支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th class="table-active">ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="table-active">商品合計</th>
            <td><%= @total.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="table-active">配送料</th>
            <td><%= @order.shipping_cost.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="table-active">ご請求額</th>
            <td><%= @order.total_payment.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <h5 class="my-3">注文内容</h5>
  <table class="table table-bordered">
    <thead class="thead-light">
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </thead>
    <tbody>
      <% @order.order_details.each do |detail| %>
        <tr>
          <td><%= detail.item.name %></td>
          <td><%= detail.item.with_tax_price %></td>
          <td><%= detail.amount %></td>
          <td><%= detail.subtotal %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>