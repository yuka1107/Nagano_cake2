<div class="container">
  <h2 class="bg-light m-3">注文情報確認</h2>
  <div class="row">
    <div class="col-9">
      <table class="table table-bordered">
        <thead class="thead-light">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% current_customer.cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= cart_item.item.name %>
              </td>
              <td>
                <%= cart_item.item.with_tax_price %>
              </td>
              <td>
                <%= cart_item.amount %>
              </td>
              <td>
                <%= cart_item.subtotal %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col">
      <table class="table table-bordered">
        <tr>
          <th class="active">送料</th>
          <td><%= @postage %></td>
        </tr>
        <tr>
          <th class="active">商品合計</th>
          <td><%= @items_total = current_customer.cart_total %></td>
        </tr>
        <tr>
          <th class="active">請求金額</th>
          <td><%= @items_total + @postage %></td>
        </tr>
      </table>
    </div>
  </div>
  <div>
  </div>

  <%= form_with model: @order, url: determine_orders_path, local:true do |f| %>
    <div class="row justify-content-start my-3">
      <div class="col-3">
        <h5>支払方法</h5>
      </div>
      <div class="col-6">
        <%= f.hidden_field :payment_method, value: @order.payment_method %>
        <%= @order.payment_method_i18n %>
      </div>
    </div>
    <div class="row justify-content-start my-3">
      <div class="col-3">
        <h5>お届け先</h5>
      </div>
      <div class="col-6">
        <%= f.hidden_field :postal_code, value: @order.postal_code %>
        <%= f.hidden_field :address, value: @order.address %>
        <%= f.hidden_field :name, value: @order.name %>
        <%= "〒#{@order.postal_code} #{@order.address} #{@order.name}" %>
      </div>
    </div>
    <div class="row justify-content-center my-3">
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    </div>
  <% end %>
</div>