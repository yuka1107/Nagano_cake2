<h2>ショッピングカート</h2>
<div>
  <%= button_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger"%>
</div>

<table class="table-bordered mx-auto">
  
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </thead>
  
  <tbody>
  <% @cart_item.each do |cart_item| %>
    <tr>
      <td><%= attachment_image_tag cart_item.item, :image, :fill, 50, 50 %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.subtotal %></td>
      <% @total_payment +=  cart_item.subtotal %>
      <%= form_with model:cart_item, local:true do |f| %>
      <td><%= f.select :amount, *[1..10] %><button type="submit" class="btn btn-success mx-3">変更</button></td>
      <% end %>
      <td><%= cart_item.subtotal.to_s(:delimited) %></td>
      <td><%= button_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
  </tbody>
  
</table>

<div class="d-flex">
  <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
  <table>
    <tbody>
      <tr>
        <td>合計金額</td>
        <td><%= total.to_s(:delimited) %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="text-center">
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
</div>