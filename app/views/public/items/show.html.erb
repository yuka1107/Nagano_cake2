<div class="container">
  <div class="row">
    <div class="col-lg-5 text-right">
      <%= attachment_image_tag @item, :image, :fill, 400, 300 %>
    </div>
    <div class="col-lg-7">
      <h2 class="font-weight-bold"><%= @item.name %></h2>
      <p><%= @item.introduction %></p>
      <h4 class="font-weight-bold">￥<%= @item.with_tax_price.to_s(:delimited) %>(税込)</h4>

      <%= form_with model:@cart_item, local:true do |f| %>
      <%= f.hidden_field :item_id, value: @item.id %>
      <%= f.select :amount, *[1..10], { include_blank: '個数選択'} %>
      <button type="submit" class="btn btn-success">カートに入れる</button>
      <% end %>
    </div>
  </div>
</div>