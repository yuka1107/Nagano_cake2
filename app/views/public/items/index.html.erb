<div class="container">
  <div class="row">
    <div class="mx-5 d-flex">
    <h3 class="font-weight-bold bg-light">商品一覧</h3>
    <p>(全<%= @items.count %>件)</p>
  </div>

<div class="d-flex flex-wrap mx-auto">
  <% @items.each do |item| %>
  <div class="mx-3">
    <%= link_to item_path(item.id) do %>
      <%= attachment_image_tag item, :image, :fill, 250, 200 %>
    <% end %>
    <p class="font-weight-bold"><%= item.name %></p>
    <p class="font-weight-bold">¥<%= item.price.to_s(:delimited) %></p>
  </div>
  <% end %>
</div>
  </div>
</div>

<div class="d-flex justify-content-center">
  <%= paginate @items %>
</div>