<div class="container">
  <h2 class="bg-light m-3"><%= "商品一覧(全#{@items.count}件)" %></h2>
  <div class="row d-flex flex-wrap mx-auto">
    <% @items.each do |item| %>
      <div class="col-lg-3">
        <div class="card">
          <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, class: "img-fluid card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= "#{item.name}" %></h5>
            <p class="card-text"><%= "¥#{item.with_tax_price}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="d-flex justify-content-center">
  <%= paginate @items %>
</div>