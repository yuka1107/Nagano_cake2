<div class="container">
  <h2 class="bg-light m-3"><%= "商品一覧(全#{@items.count}件)" %></h2>
  <div class="row d-flex flex-wrap mx-auto">
    <% @items.each do |item| %>
      <div class="col-lg-3 m-3">
        <div>
          <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, :fill, 300, 200 %>
          <% end %>
          <div>
            <h5><%= item.name %></h5>
            <p>¥<%= item.with_tax_price.to_s(:delimited) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center">
  <%= paginate @items %>
</div>