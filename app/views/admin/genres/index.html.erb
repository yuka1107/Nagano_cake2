<h2 class="bg-light m-5">ジャンル一覧・追加</h2>
<div class="container">

  <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
    <div class="row">
      <div class="col-md-2">
        <%= f.label "ジャンル名", class: "form-label" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-md-2">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

    <div class="row my-5">
    <div class="col-md-6">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>