<h4>ジャンル一覧・追加</h4>

<!-- form_with部分 -->
<%= form_with model: [:admin, @genre], local:true do |f| %>
<p class="font-weight-bold">ジャンル名
  <%= f.text_field :name %>
  <%= f.submit '新規登録', class: 'btn btn-success' %>
<% end %>
</p>


<table class="table-bordered">
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <%= @genres.each do |genre| %>
    <tr>
      <td>
        <%= genre.name %>
      </td>
      <td>
        <%= link_to "編集", edit_admin_genre_path(genre.id), class:"btn btn-sm btn-success" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
