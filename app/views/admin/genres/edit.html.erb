<h2 class="m-5">ジャンル編集</h2>
<div class="container">
  <%= form_with model: @genre, url: admin_genre_path(@genre), local:true do |f| %>
    <div class="row align-items-center">
      <div class="col-sm-2"><%= f.label "ジャンル名", class: "form-label" %></div>
      <div class="col-sm-4"><%= f.text_field :name, class: "form-control" %></div>
      <div class="col-sm-2"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
    </div>
  <% end %>
</div>