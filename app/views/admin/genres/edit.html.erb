<h1>ジャンル編集</h1>

<!-- form_with部分 -->
<%= form_with model: @genre, local:true do |f| %>
<div class="form-group">
  <label for="genre_name">ジャンル名</label>
    <%= f.text_field :name, class: "form-control"%>
</div>

<div class="form-group">
  <%= f.submit '編集内容を保存', class: "btn btn-success" %>
</div>
<% end %>