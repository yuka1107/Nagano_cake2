<h2 class="bg-light m-5">会員一覧</h2>
<div class="container-md">
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to "#{customer.last_name}#{customer.first_name}", admin_customer_path(customer) %></td>
        <td><%= customer.email %></td>
        <td><% if customer.is_active == true %>
              <p class="text-success">有効</p>
            <% else %>
              <p class="text-secondary">退会</p>
            <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="d-flex justify-content-center">
  <%= paginate @customers %>
</div>