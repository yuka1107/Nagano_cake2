<h4 class="bg-light m-5">商品詳細</h4>

<div class="container">
  <div class="row">
    <div class="col-md-3">
       <%= attachment_image_tag @item, :image, class: "img-fluid" %>
    </div>
    <div class="col-md-6">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格<br>(税抜価格)</td>
            <td><%= "#{@item.with_tax_price} (#{@item.price}) 円" %></td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <%= @item.is_active ? "販売中" : "販売停止中" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row justify-content-center">
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
  </div>
</div>