<h2>商品詳細</h2>

<%= attachment_image_tag @item, :image, :fill, 300, 300 %>
  <div>
    <h4>商品名</h4>
    　<%= @item.name %>
    <h4>商品説明</h4>
      <%= @item.introduction %>
    <h4>商品ジャンル</h4>
      <%= @item.genre.name %>
    <h4>税込み価格</h4>
      <%= @item.price %>円
    <h4>販売状況</h4>
      <% if @item.is_active == true %>
        販売中
      <% else %>
        販売停止中
      <% end %>
      
      <%= link_to "編集", edit_admin_item_path(@item), class:"btn btn-success" 
  </div>
<% end %>