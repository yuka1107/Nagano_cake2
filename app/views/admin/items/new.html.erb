<div class="container">
  <h2 class="bg-light m-3">商品新規登録</h2>
</div>

<div class="container">
  <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
    <div class="row my-3 align-items-center">
      <div class="col-3">
        <%= f.label "商品画像", class: "form-label" %>
      </div>
      <div class="col-6">
        <%= f.attachment_field :image %>
      </div>
    </div>
    <div class="row my-3 align-items-center">
      <div class="col-3">
        <%= f.label "商品名", class: "form-label" %>
      </div>
      <div class="col-6">
        <%= f.text_field :name, placeholder: "商品名", class: "form-control" %>
      </div>
    </div>
    <div class="row my-3 align-items-center">
      <div class="col-3">
        <%= f.label "商品説明", class: "form-label" %>
      </div>
      <div class="col-6">
        <%= f.text_area :introduction, placeholder: "商品説明", class: "form-control" %>
      </div>
    </div>
    <div class="row my-3 align-items-center">
      <div class="col-3">
        <%= f.label "ジャンル", class: "form-label" %>
      </div>
      <div class="col-6">
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), { include_blank: '-- 選択してください --'}, class: "form-control" %>
      </div>
    </div>
    <div class="row my-3 align-items-center">
      <div class="col-3">
        <%= f.label "税抜価格", class: "form-label" %>
      </div>
      <div class="col-6">
        <%= f.text_field :price, placeholder: "1000", class: "form-control" %>
      </div>
      <div>円</div>
    </div>
    <div class="row my-3 align-items-center">
      <div class="col-3">
        <%= f.label "販売ステータス", class: "form-label" %>
      </div>
      <div class="col-6">
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, :false, class: "ml-3" %>
        <%= f.label :is_active, "販売停止中" %>
      </div>
    </div>
    <div class="row my-3 justify-content-center">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>
</div>