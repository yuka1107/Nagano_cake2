<h2>商品の新規登録</h2>

<!-- form_with部分 -->
<%= form_with model: @item, url:'/admin/items', local: true do |f| %>
  <div class="form-group">
    <%= f.label :image_id, '商品画像' %>
    <%= f.attachment_field :image_id %>
  </div>

  <div class="form-group">
  	<%= f.label :name, '商品名' %></br>
    <%= f.text_field :name, class:"form-control" %>
  </div>

  <div class="form-group">
  	<%= f.label :introduction, '商品説明' %></br>
    <%= f.text_area :introduction, class:"form-control" %>
  </div>

  <div class="form-group">
  	<%= f.label :price, '税抜き価格' %></br>
    <%= f.text_field :price, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "登録", class: "btn btn-success" %>
  </div>
<% end %>