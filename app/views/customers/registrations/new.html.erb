<h3 clss="mx-5">新規会員登録</h3>

<%= form_with model: @customer, url: user_registration_path, local: true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="d-flex justify-content-center">
    <table>
      <tbody>
        <tr>
          <td>名前</td>
          <td>
            <%= f.label :last_name, "(姓)" %>
            <%= f.text_field :last_name %>
          </td>
          <td>
            <%= f.label :first_name, "(名)" %>
            <%= f.text_field :first_name %>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>
            <%= f.label :last_name_kana, "(セイ)" %>
            <%= f.text_field :last_name_kana %>
          </td>
          <td>
            <%= f.label :first_name_kana, "(メイ)" %>
            <%= f.text_field :first_name_kana %>
          </td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>電話番号(ハイフンなし)</td>
          <td><%= f.telephone_field :telephone_number %></td>
        </tr>
        <tr>
          <td>パスワード(6文字以上)</td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td>パスワード(確認用)</td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "新規登録", class="btn btn-success" %></td>
        </tr>
      </tbody>
    </table>
  </div>
<% end %>

<h4>既に登録済みの型</h4>
<div class="mx-5"><%= link_to "こちら", customer_session_path %>からログインしてください</div>


